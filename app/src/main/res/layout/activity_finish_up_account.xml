<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FinishUpAccount">
  <include layout="@layout/toolbar_stepone"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    >
  <ImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center"
      android:src="@drawable/ic_baseline_check_circle_outline_24"
      ></ImageView>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="STEP 1 OF 3"
      android:textSize="25dp"
      android:layout_gravity="center"
      android:id="@+id/step1of3finish"
      android:textColor="@color/colorAccent"
      ></TextView>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Finish setting up your account."
    android:textStyle="bold"
    android:textSize="25dp"
    android:layout_marginLeft="20dp"
      android:textColor="@color/colorAccent"
    ></TextView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Netflix is personalised for you.Create a password to watch Netflix on any device at any time."
    android:textSize="25dp"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:textColor="@color/colorAccent"
    ></TextView>

  <Button
      android:layout_width="291dp"
      android:layout_height="58dp"
      android:text="CONTINUE"
      android:gravity="center"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="30dp"
      android:background="@color/progressbar"
      android:textColor="@color/item_selected"
      android:textSize="25dp"
      android:id="@+id/continue1"
      ></Button>
</LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>