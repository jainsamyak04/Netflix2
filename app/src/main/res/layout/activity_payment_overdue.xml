<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChooseYourPlan">
    <include layout="@layout/toolbar_stepone"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="-4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="Your plan has been expired please select plan thats suits you"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="Downgrade or Upgrade at any time."
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/radiobuttonforbasic"
                        android:layout_width="40dp"
                        android:layout_height="33dp"
                        android:buttonTint="#0097A7"

                        />
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Basic"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"/>


                </LinearLayout>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="₹ 349/month"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/colorAccent"
                    />
                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="179dp"
                    android:src="@drawable/basicplanimage"
                    android:layout_marginTop="50dp"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/radiobuttonforstandard"
                        android:layout_width="40dp"
                        android:layout_height="33dp"
                        android:buttonTint="#0097A7"

                        />
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Standard"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"/>


                </LinearLayout>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="₹ 649/month"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/colorAccent"
                    />
                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="179dp"
                    android:src="@drawable/standardplanimage"
                    android:layout_marginTop="50dp"

                    />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/radiobuttonforpremium"
                        android:layout_width="40dp"
                        android:layout_height="33dp"
                        android:buttonTint="#0097A7"

                        />
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Premium"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"/>


                </LinearLayout>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="₹ 799/month"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/colorAccent"
                    />
                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="179dp"
                    android:src="@drawable/basicplanimage"
                    android:layout_marginTop="50dp"

                    />


            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/paybuttonchooseplan"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/progressbar"
                android:text="Pay"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>