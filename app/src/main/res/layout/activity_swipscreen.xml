<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Mainscreens.Mainscreen"
        android:background="#000">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">
                <ImageView
                    android:id="@+id/netflixlogo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/ic_logo_netflix"
                    ></ImageView>
                <TextView
                    android:id="@+id/privacytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="124dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/netflixlogo"
                    android:text="PRIVACY"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="UnknownId" />

                <TextView
                    android:id="@+id/helptextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/netflixlogo"
                    android:text="HELP"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/signintextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/netflixlogo"
                    android:text="SIGNIN"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="UnknownId" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.viewpager.widget.ViewPager
               android:id="@+id/viewpagerswipescreen"
               android:layout_width="match_parent"
               android:layout_height="500dp"
               android:layout_marginTop="57dp"
               android:layout_marginBottom="63dp"
               tools:ignore="MissingConstraints">

           </androidx.viewpager.widget.ViewPager>

           <LinearLayout
               android:id="@+id/silderdots"
               android:layout_width="340dp"
               android:layout_height="20dp"
               android:layout_marginLeft="50dp"
               android:layout_marginTop="570dp"
               android:layout_marginBottom="63dp"
               android:gravity="center_horizontal|center_vertical"
               android:orientation="horizontal"></LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/getstarted"
            android:layout_width="374dp"
            android:layout_height="62dp"
            android:layout_marginBottom="24dp"
            android:text="GET STARTED"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="@color/activedots"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
