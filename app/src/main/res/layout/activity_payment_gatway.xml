<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PaymentGatway">
    <include layout="@layout/paymenttoolbar"></include>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="STEP 3 OF 3"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/step3of3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Set up your credit or debit card."
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:layout_marginLeft="30dp"
         >
         <ImageView
             android:layout_width="44dp"
             android:layout_height="match_parent"
             android:src="@drawable/visacard"
             ></ImageView>
         <Space
             android:layout_width="5dp"
             android:layout_height="match_parent"></Space>
         <ImageView
             android:layout_width="44dp"
             android:layout_height="match_parent"
             android:src="@drawable/mastercard"
             ></ImageView>
         <Space
             android:layout_width="5dp"
             android:layout_height="match_parent"></Space>
         <ImageView
             android:layout_width="44dp"
             android:layout_height="match_parent"
             android:src="@drawable/americanexpress"
             ></ImageView>
         <Space
             android:layout_width="5dp"
             android:layout_height="match_parent"></Space>
         <ImageView
             android:layout_width="44dp"
             android:layout_height="match_parent"
             android:src="@drawable/lastcard"
             ></ImageView>

     </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="335dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="#fff"
        android:padding="1dp"
        android:textColorHint="#000"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:hintTextColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstnameedittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_stroke"
            android:hint="First Name"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20dp">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="335dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="#fff"
        android:padding="1dp"
        android:textColorHint="#000"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:hintTextColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastnameedittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_stroke"
            android:hint="Last Name"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20dp">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="335dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="#fff"
        android:padding="1dp"
        android:textColorHint="#000"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:hintTextColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contactnumberedittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_stroke"
            android:hint="Contact Number"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20dp"
            android:inputType="number"
            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/hori"
        android:layout_width="333dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/linearlayoutstrok"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ver"
            android:layout_width="219dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/linearlayoutstrok"
            android:orientation="vertical">

            <TextView
                android:id="@+id/costtoset"
                android:layout_width="203dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="â‚¹ 349/month"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plannametoset"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Basic"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/Change"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Change"
            android:textColor="#2979FF"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

    <Space
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/toputurltext"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="By checking the checkbox below, you agree to our Terms of Use, Privacy Statement, and that you are over 18. Netflix will automatically continue your membership and charge the monthly membership fee to your payment method until you cancel. You may cancel at any time to avoid future charges."
        android:textColor="#000"
        android:textSize="14dp" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/iagree"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:layout_marginLeft="35dp"
        android:buttonTint="#000"
        android:text="I agree."
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/startmembershipbutton"
        android:layout_width="309dp"
        android:layout_height="64dp"
        android:layout_marginLeft="40dp"
        android:background="@color/progressbar"
        android:text="START MEMBERSHIP"
        android:textColor="#fff"
        android:textSize="20dp" />
</LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>